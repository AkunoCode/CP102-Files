import tkinter as tk
import ttkbootstrap as ttk

def convert():
    miles = every_int.get()
    km = miles * 1.609
    output_string.set(f'{km:.2f} km')

def nightmode():
    global dark
    global theme
    if dark:
        theme = 'journal'
        dark = False
    else:
        theme = 'darkly'
        dark = True
    style = ttk.Style()
    style.theme_use(theme)

# Window
dark = False
theme = 'journal'
window = ttk.Window(themename=theme)
window.title("Miles to Kilometer Converter")
window.geometry("300x200")

# Title
title_label = ttk.Label(
    master= window, 
    text="Miles to Kilometers",
    font= "Calibri 24 bold"
    )
title_label.pack()

# Input field
input_frame = ttk.Frame(master= window)
every_int = tk.IntVar()
entry = ttk.Entry(
    master= input_frame,
    textvariable=every_int
    )
button = ttk.Button(
    master= input_frame,
    text='Convert',
    command= convert)
entry.pack(side= 'left', padx=10)
button.pack(side= 'left')
input_frame.pack(pady=10)

# Output
output_string = tk.StringVar()
output_label = ttk.Label(
    master=window,
    text='Output',
    font = 'Calibri 24',
    textvariable= output_string
)
output_label.pack(pady= 5)

# Nightmode
nightmode_button = ttk.Button(
    master=window,
    text='Nightmode',
    command= nightmode
)
nightmode_button.pack(pady= 5)


# run
window.mainloop()
